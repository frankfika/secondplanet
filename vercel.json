{
  "version": 2,
  "installCommand": "npm install -g pnpm@9.0.0 && pnpm install --no-frozen-lockfile",
  "buildCommand": "pnpm --filter @secondplanet/server db:generate && pnpm --filter @secondplanet/web build",
  "outputDirectory": "packages/web/dist",
  "framework": null,
  "functions": {
    "api/index.ts": {
      "maxDuration": 30,
      "memory": 1024,
      "includeFiles": [
        "apps/server/src/**",
        "apps/server/prisma/**",
        "packages/core/**"
      ]
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
